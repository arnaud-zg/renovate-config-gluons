{
  "name": "renovate-config-gluons",
  "version": "1.0.0",
  "description": "Gluons' personal Renovate shareable config.",
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/renovate-config-gluons.git"
  },
  "keywords": [
    "❤️",
    "renovate",
    "renovateconfig",
    "renovate-config",
    "gluons"
  ],
  "author": "Saran Tanpituckpong <sarunta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gluons/renovate-config-gluons/issues"
  },
  "homepage": "https://github.com/gluons/renovate-config-gluons",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "pinVersions": false,
      "labels": [
        "renovate"
      ],
      "assignees": [
        "gluons"
      ],
      "reviewers": [
        "gluons"
      ],
      "timezone": "Asia/Bangkok",
      "schedule": [
        "every weekend"
      ],
      "commitMessage": ":arrow_up: {{semanticPrefix}}Update dependency {{depName}} to version {{newVersion}}"
    }
  },
  "devDependencies": {
    "@types/jest": "^22.1.0",
    "eslint": "^4.16.0",
    "eslint-config-gluons": "^3.0.0",
    "jest": "^22.1.4",
    "renovate": "^11.11.3"
  }
}
